var arr = ["amit", "rahul", "divya", "puja","divya", "amit"];		

var mapped = new Map();

for(var i=0;i<arr.length;i++){
  var prev = mapped.size;
  mapped.set(arr[i],null);
 
  if(prev == mapped.size){
    mapped.set(arr[i], 2);
  }
  else{
    mapped.set(arr[i], 1);
  }
  
}



var key = mapped.keys()
for(var k of key){
  console.log(k+ ":"+mapped.get(k));
}


