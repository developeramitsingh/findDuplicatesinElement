var arr = ["amit", "rahul", "divya", "puja","divya", "amit", "amit"];		

var mapped = new Map();

for(var i=0;i<arr.length;i++){
  mapped.set(arr[i],0);
}

for(var i=0;i<arr.length;i++){
  var prev = mapped.size;
  
  if(prev == mapped.size){
    var count = mapped.get(arr[i]);
    mapped.set(arr[i], ++count);
  }  
}

var key = mapped.keys()
for(var k of key){
  console.log(k+ ":"+mapped.get(k));
}


